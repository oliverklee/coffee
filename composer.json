{
    "name": "oliverklee/coffee",
    "description": "Example extension workshops on TDD with TYPO3 and PHPUnit",
    "type": "typo3-cms-extension",
    "keywords": [
        "example",
        "tdd",
        "unit testing"
    ],
    "homepage": "https://github.com/oliverklee/tdd-reader",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Oliver Klee",
            "email": "typo3-coding@oliverklee.de",
            "homepage": "https://www.oliverklee.de",
            "role": "developer"
        }
    ],
    "support": {
        "source": "https://github.com/oliverklee/coffee",
        "issues": "https://github.com/oliverklee/coffee/issues"
    },
    "require": {
        "php": "~7.0.0 || ~7.1.0 || ~7.2.0",
        "typo3/cms": "^8.7.0"
    },
    "require-dev": {
        "namelesscoder/typo3-repository-client": "^1.2.0",
        "nimut/testing-framework": "^2.0.0",
        "phpunit/phpunit": "^5.7.0",
        "mikey179/vfsStream": "^1.6.0"
    },
    "replace": {
        "coffee": "self.version",
        "typo3-ter/coffee": "self.version"
    },
    "autoload": {
        "psr-4": {
            "OliverKlee\\Coffee\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OliverKlee\\Coffee\\Tests\\": "Tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.typo3.org/"
        }
    ],
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/coffee ]|| ln -snvf ../../../../. .Build/Web/typo3conf/ext/coffee"
        ]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}
