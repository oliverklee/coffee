{
    "name": "oliverklee/coffee",
    "type": "typo3-cms-extension",
    "version": "1.0.0",
    "description": "Demo extension for PHPUnit workshops with TYPO3.",
    "keywords": [
        "TYPO3",
        "extension",
        "tdd",
        "phpunit",
        "unit testing"
    ],
    "homepage": "https://www.oliverklee.de",
    "authors": [
        {
            "name": "Oliver Klee",
            "role": "Developer",
            "homepage": "https://www.oliverklee.de"
        }
    ],
    "license": [
        "GPL-2.0+"
    ],
    "replace": {
        "coffee": "self.version",
        "typo3-ter/coffee": "self.version"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.typo3.org/"
        }
    ],
    "require": {
        "php": "~7.0.0 || ~7.1.0",
        "typo3/cms": "^8.7.0",
        "roave/security-advisories": "dev-master"
    },
    "require-dev": {
        "namelesscoder/typo3-repository-client": "^1.2.0",
        "nimut/testing-framework": "^2.0.0",
        "phpunit/phpunit": "^5.7.0",
        "mikey179/vfsStream": "^1.6.0"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/coffee ]|| ln -snvf ../../../../. .Build/Web/typo3conf/ext/coffee"
        ]
    },
    "autoload": {
        "psr-4": {
            "OliverKlee\\Coffee\\": "Classes/",
            "OliverKlee\\Coffee\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}
